<div class="m-4">
    
<form method="POST" action="/course/{{course._id}}?_method=PUT">
 
  <div class="form-group">
    <label for="exampleInput">Name</label>
    <input type="text" class="form-control" id="name" value='{{course.name}}' placeholder="Name" name="name">

  </div>
  <div class="form-group">
    <label for="exampleInput">Price</label>
    <input type="text" class="form-control" id="price" value="{{course.price}}" placeholder="Price" name="price">
  </div>
  <div class="form-group">
    <label for="exampleInput">Video id</label>
    <input type="text" class="form-control" id="courseId" value="{{course.courseId}}" placeholder="Video id" name="courseId">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>






</div>

    

